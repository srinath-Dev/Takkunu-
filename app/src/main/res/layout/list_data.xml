<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/locbut"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="-75dp"
            android:layout_height="wrap_content">
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:text="Bus Number :"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#000000"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Type of Bus :"
                android:textSize="25dp"


                android:textStyle="bold">


            </TextView>
            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Registration No :"
                android:textSize="25dp"


                android:textStyle="bold">

            </TextView>
            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="From :"
                android:textSize="25dp"


                android:textStyle="bold">

            </TextView>
            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="To :"
                android:textSize="25dp"


                android:textStyle="bold">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="115dp"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/busnoid"

            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="5dp"
            android:text="Bus"
            android:textColor="#FEC706"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:textColor="#FEC706"
            android:id="@+id/typeid"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Type"
            android:textSize="25dp"


            android:textStyle="bold">


        </TextView>
        <TextView
            android:id="@+id/regiid"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:textColor="#FEC706"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Registra"
            android:textSize="25dp"


            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/sourid"
            android:textColor="#FEC706"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Source"
            android:textSize="25dp"


            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/desid"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="#FEC706"
            android:text="Destination"
            android:textSize="25dp"


            android:textStyle="bold">

        </TextView>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/autoD8"
        android:layout_width="247dp"
        android:layout_height="44dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="90dp"
            android:id="@+id/locateid"
            android:layout_height="match_parent"
            android:text="Locate"
            android:layout_marginLeft="150dp"
            android:background="@drawable/card"
            ></Button>

    </LinearLayout>

</androidx.cardview.widget.CardView>