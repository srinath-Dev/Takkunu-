<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/busloginback"

    tools:context=".DriverLoginRegisterActivity">

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/titlr_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/driver_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Email..."
            android:inputType="textEmailAddress" />


        <EditText
            android:id="@+id/driver_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Password..."
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/register_driver_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="125dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/whitebut"
                android:text="Register"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/login_driver_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-150dp"
                android:background="@drawable/yellowbut"
                android:backgroundTint="@color/colorAccent"

                android:text="Login"
                android:textAllCaps="false"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/create_driver_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Don't have an account?"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>